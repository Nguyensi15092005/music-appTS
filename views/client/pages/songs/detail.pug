extends ../../layout/default.pug
include ../../mixins/box-head.pug

block main 
  .singer-detail 
    .container.my-3 
      .row 
        .col-12 
          .inner-title #{song.title} 
          
          .inner-actions
            div(class="inner-action inner-time")
              <i class="fa-regular fa-clock"></i> 05/05/2025
            div(class="inner-action inner-singer")
              <i class="fa-solid fa-microphone-lines"></i> #{singer.fullName}
            div(class="inner-action inner-topic")
              <i class="fa-solid fa-music"></i> #{topic.title}
            div(class="inner-action inner-like")
              <i class="fa-regular fa-thumbs-up"></i> #{song.like} thích

            div(class="inner-action inner-heart")
              <i class="fa-regular fa-heart"></i> Bài nhạc yêu thích

          .inner-play
            .inner-avatar 
              img(src=song.avatar, alt=song.title)
            
            .inner-audio 
              //- audio(controls)
              //-   source(src="/assets/audio/chung-ta-cua-hien-tai.mp3")
              div(
                id="aplayer"
                data-song=song 
                data-singer=singer
              )
              
          .inner-desc 
            .inner-label Mô tả
            .inner-text 
              | !{song.description}

          .inner-desc 
            .inner-label Lời bài hát
            .inner-text 
              | !{song.lyrics}
          




