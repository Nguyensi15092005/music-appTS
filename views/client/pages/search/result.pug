extends ../../layout/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main 
  .container.my-3 
    .row 
      .col-12 
        +box-head("Kết quả tìm được của bài hát")

    .row 
      each song in songs
        .col-6.mb-3 
          div(class="song-item")
            div(class="inner-img")
              a(href=`/songs/detail/${song.slug}`)
                img(src=song.avatar, alt=song.title) 
            div(class="inner-content")
              div(class="inner-title")
                a(href=`/songs/detail/${song.slug}`) #{song.title}
              div(class="inner-singer")
                <i class="fa-solid fa-microphone-lines"></i> #{song.infoSinger.fullName}
              div(class="inner-like") 
                <i class="fa-regular fa-thumbs-up"></i> #{song.countLike}
              div(class="inner-time")
                <i class="fa-regular fa-clock"></i> Hôm nay